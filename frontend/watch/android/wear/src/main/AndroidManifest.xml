<?xml version="1.0" encoding="utf-8"?>
<!-- AndroidManifest.xml for Wear OS app -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.visiongo.megaradio.wear">

    <!-- Wear OS feature -->
    <uses-feature android:name="android.hardware.type.watch" />
    
    <!-- Wearable Data Layer -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MegaRadio"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">
        
        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:taskAffinity=""
            android:theme="@android:style/Theme.DeviceDefault">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Wearable Listener Service for phone communication -->
        <service
            android:name=".WearableListenerService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data
                    android:host="*"
                    android:pathPrefix="/megaradio"
                    android:scheme="wear" />
            </intent-filter>
        </service>

        <!-- Meta-data for standalone watch app -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="false" />
            
    </application>

</manifest>
