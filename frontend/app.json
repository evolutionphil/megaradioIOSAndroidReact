{
  "expo": {
    "name": "MegaRadio",
    "slug": "megaradio",
    "version": "1.0.27",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": ["megaradio", "com.googleusercontent.apps.246210957471-18662dh38h9tmlk7nppdk15ucbha4emk"],
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.visiongo.megaradio",
      "buildNumber": "44",
      "usesAppleSignIn": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "audio",
          "fetch",
          "remote-notification",
          "external-accessory",
          "processing"
        ],
        "UIRequiredDeviceCapabilities": [
          "armv7"
        ],
        "UISupportedExternalAccessoryProtocols": [],
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.246210957471-18662dh38h9tmlk7nppdk15ucbha4emk"
            ]
          }
        ],
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSAllowsArbitraryLoadsForMedia": true,
          "NSAllowsArbitraryLoadsInWebContent": false
        },
        "NSLocationWhenInUseUsageDescription": "MegaRadio uses your location to find nearby radio stations.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "MegaRadio uses your location to find nearby radio stations.",
        "NSPhotoLibraryUsageDescription": "Photo library access is required to upload a profile picture.",
        "NSCameraUsageDescription": "Camera access is required to take a profile picture.",
        "NSMicrophoneUsageDescription": "Microphone access is required for audio recording.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIApplicationSceneManifest": {
          "UIApplicationSupportsMultipleScenes": true,
          "UISceneConfigurations": {
            "UIWindowSceneSessionRoleApplication": [
              {
                "UISceneConfigurationName": "Default Configuration",
                "UISceneDelegateClassName": "$(PRODUCT_MODULE_NAME).PhoneSceneDelegate"
              }
            ],
            "CPTemplateApplicationSceneSessionRoleApplication": [
              {
                "UISceneConfigurationName": "CarPlay",
                "UISceneDelegateClassName": "$(PRODUCT_MODULE_NAME).CarPlaySceneDelegate"
              }
            ]
          }
        }
      },
      "entitlements": {
        "com.apple.developer.carplay-audio": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FF4199"
      },
      "package": "com.visiongo.megaradio",
      "versionCode": 44,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "ACCESS_WIFI_STATE",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_MEDIA_PLAYBACK",
        "WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-apple-authentication",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "newArchEnabled": false,
            "kotlinVersion": "2.0.0",
            "extraProguardRules": "-keep class io.invertase.** { *; }\n-keep class com.google.android.gms.ads.** { *; }"
          },
          "ios": {
            "useFrameworks": "static",
            "newArchEnabled": false,
            "fabricEnabled": false
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#FF4199",
          "defaultChannel": "default"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "MegaRadio uses your location to find nearby radio stations."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Photo library access is required to upload a profile picture."
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Ses kaydı yapabilmek için mikrofon erişimi gereklidir.",
          "ios": {
            "allowsBackgroundAudioPlayback": true
          },
          "android": {
            "allowsBackgroundAudioPlayback": true
          }
        }
      ],
      "./plugins/withAirPlay.js",
      "./plugins/withAndroidAutoFull.js",
      "./plugins/withCleartextTraffic.js",
      "./plugins/withSwift5Mode.js",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-3940256099942544~3347511713",
          "iosAppId": "ca-app-pub-3940256099942544~1458002511"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
